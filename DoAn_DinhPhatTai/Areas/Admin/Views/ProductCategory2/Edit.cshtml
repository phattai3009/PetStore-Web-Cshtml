@model Model.EF.Giong
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Header{
    Danh mục Giống
}
@section jsFooter{
    <script>
        $('#btnImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            finder.popup();
        })
        $(document).ready(function () {
            CKEDITOR.replace('txtNoiDung');
        });
    </script>
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Cập nhật</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "ProductCategory2", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label>Mã Loại</label>
                @Html.TextBoxFor(model => model.MaLoai, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaLoai)
            </div>

            <div class="form-group">
                <label>Mã Giống</label>
                @Html.TextBoxFor(model => model.MaGiong, new { @class = "form-control", @ReadOnly = "ReadOnly" })
            </div>
            <div class="form-group">
                <label>Tên Giống</label>
                @Html.TextBoxFor(model => model.TenGiong, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TenGiong)
            </div>
            <div class="form-group">
                <label>Mô Tả</label>
                @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MoTa)
            </div>
            <div class="form-group">
                <center>
                    <input type="submit" value="Hoàn thành" class="btn btn-primary" />
                </center>
            </div>
        }
    </div>
</div>

