@model Model.EF.Feedback
@{
    ViewBag.Title = "Liên Hệ";
    Layout = "~/Views/Shared/_UserLayout2.cshtml";
}
<style>
    #divNavigation {
        display: none;
    }
</style>
<section class="contact-section padding_top span999">
    <div class="container">
        <div class="d-none d-sm-block mb-5 pb-4">
            <h2>Bản đồ</h2>
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d3687.080399238265!2d106.50401006125277!3d10.579849578552112!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e1!3m2!1svi!2s!4v1637497980778!5m2!1svi!2s" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Gửi phản hồi</h2>
            </div>
            <div class="col-lg-8">
                @using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { @class = "form-contact contact_form" }))
                {
                    if (ViewBag.Success != null)
                    {
                    <div class="alert alert-success">
                        @ViewBag.Success
                    </div> }
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                @Html.TextAreaFor(model => model.Content, new { @class = "form-control w-100", @placeholder = "Nội dung phản hồi", @cols = "30", @rows = "9" })
                                <p>@Html.ValidationMessageFor(model => model.Content, null, new { @class = "text-danger" })</p>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Họ tên" })
                                <p>@Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Số điện thoại" })
                                <p>@Html.ValidationMessageFor(model => model.Phone, null, new { @class = "text-danger" })</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Địa chỉ Email" })
                                <p>@Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })</p>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Địa chỉ" })
                                <p>@Html.ValidationMessageFor(model => model.Address, null, new { @class = "text-danger" })</p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button class="btn btn-primary genric-btn primary circle arrow">GỬI PHẢN HỒI</button>
                    </div>}
            </div>
        </div>
    </div>
</section>

